# ============================================================
# Google Gemini API
# ============================================================
GOOGLE_API_KEY=************************
MODEL=gemini-2.0-flash

# ============================================================
# キャラプロンプト（単体モード用）
# ============================================================
PROMPT_FILE_A=../aituber-kit/prompts/iris.txt
PROMPT_FILE_B=../aituber-kit/prompts/fiona.txt

# ============================================================
# 掛け合いモード用・統合プロンプト
# ============================================================
PROMPT_FILE_AB=./orchestrator/prompts/aibs_dual.txt

# ============================================================
# WebSocket URLs（AItuberKit との通信）
# ============================================================
WS_URL_A=ws://localhost:8765/wsA
WS_URL_B=ws://localhost:8765/wsB
WS_URL_AB=ws://localhost:8765/wsAB

# ============================================================
# キャラ接頭辞（IR / FI の判定用）
# ハードコーディング禁止 → ここを必ず参照
# ============================================================
CHAR_PREFIX_A=IR
CHAR_PREFIX_B=FI

# ============================================================
# モード設定
# A = 単体（アイリス）
# B = 単体（フィオナ）
# AB = 掛け合いモード
# ============================================================
APP_MODE=AB

# ============================================================
# 掛け合い設定
# ============================================================
TAG_A=A
TAG_B=B

LIMIT_A=250
LIMIT_B=250
LIMIT_AB=500
